<Window x:Class="EmposoTask.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmposoTask"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Label>Count</Label>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="5*"/>
            </Grid.ColumnDefinitions>
            <DataGrid>
                
            </DataGrid>
            <StackPanel Grid.Column="1">
                <Label Content="Name"/>
                <TextBox Margin="5,5,5,5"/>
                <Label Content="Age"/>
                <TextBox Margin="5,5,5,5"/>
                <StackPanel Orientation="Horizontal">
                    <Button Width="50" Margin="5">Add</Button>
                    <Button Width="50" Margin="5">Edit</Button>
                    <Button Width="50" Margin="5">Delete</Button>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
